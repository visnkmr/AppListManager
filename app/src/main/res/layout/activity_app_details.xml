<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.visnkmr.firetvapplist.AppDetails"
    android:orientation="vertical"
    android:paddingTop="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp">
<ImageView
    android:layout_gravity="center"
    android:id="@+id/app_icon"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:scaleType="fitCenter"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp">
            <TextView
                android:id="@+id/app_label"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/lm"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/lut"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                />
        <TextView
            android:id="@+id/sdir"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:id="@+id/btnlyt">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Open App"
            android:layout_weight="1"
            android:id="@+id/openapp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save apk"
            android:layout_weight="1"
            android:id="@+id/saveapk"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="View in store"
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/playstore"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="App settings"
            android:layout_weight="1"
            android:id="@+id/appsettings"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/maintable" >
        </TableLayout>
    </ScrollView>
</LinearLayout>
